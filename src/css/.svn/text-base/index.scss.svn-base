@import "reset.css";
@import "scss_common";
@import "css_common";
a{ text-decoration:none; color:#fff;}
img{
  @extend %imgB;
}
.img_wrap{
  @extend %imgWrap;
}
#tel{
  right:0;
  height:44px; width:44px;
  @include bg("wap_index/phone_icon.png");
  background-position:center center;
  -webkit-background-size:20px 20px; background-size:20px 20px;
  position:absolute;
}

#content{
  width:j(640);
  margin:0 auto;
  background:#fff;
}

.slider{
  overflow:hidden;
  position:relative;
  margin:0 auto;
  width:100%;
  max-width:j(640);
  img{
    @extend %imgB;
    position:absolute;
    left:0;
    top:0;
    width:100%;
    height:100%;
  }
  &:after{
    content:'';
    display:block;
    width:100%;
    padding-top:50%;
  }
  ul{
    position:absolute;
    left:0;
    top:0;
    width:100%;
    height:100%;
  }
  li{ position:absolute;
    left:0;
    top:0; list-style:none;
    width:100%;
    height:100%; }
}
.trigger{
  position:absolute; bottom:j(5); width:100%;
  text-align:center;
  font-size:0;
  a{
    display:inline-block;
    width:j(10); height:j(10);
    background-color:#555;
     -webkit-border-radius:50%; -moz-border-radius:50%; border-radius:50%;
    margin:j(5);
    -webkit-transition:all .3s; -moz-transition:all .3s; -ms-transition:all .3s; -o-transition:all .3s; transition:all .3s;
  }
  a.curr{
    background-color:#fff;
  }
}
